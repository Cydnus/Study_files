<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
		   <div class="navbar-header">
		   	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
		   		<span class="icon-bar"></span>
		   		<span class="icon-bar"></span>
		   		<span class="icon-bar"></span>
		   	</button>

		   	@{				
				int temp = Convert.ToInt32(ViewData["id"]);
				if (temp == 0)
				{
		   	@Html.ActionLink("MegaStore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
	   }
	   else
	   {
		   @Html.ActionLink("MegaStore(로그아웃)", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

	   }
		   }

		   </div>
            <div class="navbar-collapse collapse">
			  <ul class="nav navbar-nav">
			  	<li>@Html.ActionLink("홈", "Index", "Home", new { area = "" }, null)</li>
			  @{
				if (temp == 1)
				{
			  	<li>@Html.ActionLink("매장 매출", "Index", "BranchStock", new { area = "" }, null)</li>
			  <li>@Html.ActionLink("매장 재고", "Index", "BranchSOR", new { area = "" }, null)</li>

		  }
		  else if (temp == 2)
		  {
			  <li>@Html.ActionLink("전체 매장 매출", "Index", "OfficeStock", new { area = "" }, null)</li>
			  <li> @Html.ActionLink("전체 매장 재고", "Index", "OfficeSOR", new { area = "" }, null) </li> 
			  <li>@Html.ActionLink("전체 직원 목록", "Index", "OfficeEmp", new { area = "" }, null)</li>
		  }

			  }

			  </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
		   <p>Copyright &copy; 2021 - @DateTime.Now.Year.  Mega Stroe Coperation. All rights reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
